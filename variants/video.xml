<theme>
    <include>./../assets.xml</include>

    <variables>
		<box>./../assets/box.png</box>
        <overlayPath>./../assets/overlays/detailed.png</overlayPath>
	</variables>

    <view name="gamelist">

        <image name="overlay">
           <path>${overlayPath}</path>
        </image>
		
		<video name="gameVideo">
			<imageType>image</imageType>
			<pos>0.49 0.34</pos>
			<maxSize>0.263 0.454</maxSize>
			<origin>0.5 0.5</origin>
			<zIndex>2</zIndex>
			<interpolation>linear</interpolation>
			<pillarboxes>false</pillarboxes>
            <pillarboxThreshold>0.85 0.90</pillarboxThreshold>
            <delay>1.5</delay>
            <scrollFadeIn>true</scrollFadeIn>
		</video>
    </view>
</theme>